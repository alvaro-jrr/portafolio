---
import profileImage from "@/assets/profile.png";
import { cn } from "@/lib/utils";
import type { HTMLAttributes } from "astro/types";
import { Image } from "astro:assets";

interface Props extends Omit<HTMLAttributes<"img">, "class"> {
	size: number;
	className?: astroHTML.JSX.HTMLAttributes["class"];
}

const { size, loading, className } = Astro.props;
---

<Image
	class={cn("overflow-clip rounded-full", className)}
	src={profileImage}
	alt="Imagen de perfil"
	loading={loading}
	width={size}
	height={size}
/>
